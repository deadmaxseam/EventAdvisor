<%= turbo_frame_tag 'name' do %>
    <%= form_with url: "/pages/update_ev/name/#{@event_id}", method: :put do |form| %>
        <%= form.text_field :name, placeholder: "Название" %>
        <%= form.submit "Сохранить", class:"form-submit-button" %>
    <% end %>
<% end %>

