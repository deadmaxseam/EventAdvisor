<div class="form-modal">
   <span class="close" onclick="window.location.href = '/'">&times;</span>
    <h1 class="form-additional">Вход</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <div class="form-label" >
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

       <div class="form-label" >
        <%= f.label :password, "Пароль" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
         <div class="form-label" >
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Сохранить вход" %>
        </div>
      <% end %>

      <div class= "form-additional">
        <%= f.submit "Войти", class: "form-submit-button"  %>
      </div> 

      <div class= "form-additional">
        Нет аккаунта? <%= link_to "Зарегистрироваться", new_user_registration_path %>
      </div>

      <% if resource.errors.any? %>
        <div id="err">
          <% resource.errors.full_messages.each do |message| %>
            <p class="registration-error-message">
              <%= message %>
            </p>
          <% end %>
        </div>
      <% end %>
    <% end %>
</div>